#if(common.canTeach) {
    <div class="pull-right button-group">
        <a href="/events/#(event.id)/edit" class="ink-button"><span class="fa fa-edit"></span> Edit Event</a>
        <a href="/events/#(event.id)/problems/new" class="ink-button"><span class="fa fa-plus"></span> Add Problem</a>
    </div>
}

<h2>
    #(event.name)
    #embed("Events/Fragments/event-language-icon")
    <small>#(event.shortDescription)</small>
</h2>

#if(common.authenticated) {
    <nav class="ink-navigation">
        <ul class="pagination pills grey">
            <li #if(contains(common.pathComponents,"problems")) { class="active" }><a href="/events/#(event.id)/problems">Problems</a></li>
            <li #if(contains(common.pathComponents,"submissions")) { class="active" }><a href="/events/#(event.id)/submissions">Submissions</a></li>
            <li #if(contains(common.pathComponents,"scores")) { class="active" }><a href="/events/#(event.id)/scores">Scores</a></li>
        </ul>
    </nav>
}
